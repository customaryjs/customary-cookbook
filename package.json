{
  "name": "customary-tutorials",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "// ---- public ---- //": "",
    "start": "npm run dist && npm run start-dist-web",
    "dist": "copyfiles --error --all \"web/**/*\" .dist",
    "help:dist": "echo we copy web/*.ts files too because browsers can step debug them",
    "start-dist-web": "http-server .dist/web -i=false -c-1",
    "clean": "rimraf web/_script .dist",
    "clean-src": "rimraf --glob src/**/*.d.ts src/**/*.js.map src/**/*.js",
    "dev": "run-p dev-dependencies compile-watch start-dev",
    "start-dev": "http-server -i=true -c-1",
    "// ---- pre & post ---- //": "",
    "predist": "npm run clean && npm run dist-dependencies && npm run compile",
    "postdist": "replace-in-file --configFile=package-json-scripts-postdist-replace-in-file-config.json --isRegex --verbose",
    "// ---- private ---- //": "",
    "compile-watch": "tsc --build --verbose --watch",
    "compile": "tsc --build --verbose",
    "script": "ts-node -P scripts/tsconfig.json scripts/scripts.ts",
    "// ---- dependencies ---- //": "",
    "dev-dependencies": "run-p dev-dependency:*",
    "dev-dependency:customary": "npm run --prefix node_modules/customary dev",
    "dist-dependencies": "run-p dist-dependency:*",
    "predist-dependency:customary": "npm run --prefix node_modules/customary dist",
    "dist-dependency:customary": "npm run script -- dist-dependency:customary",
    "dist-dependency:knockout": "npm run script -- dist-dependency:knockout",
    "dist-dependency:highlight.js": "npm run script -- dist-dependency:highlight.js",
    "dist-dependency:chai": "npm run script -- dist-dependency:chai",
    "dist-dependency:mocha": "npm run script -- dist-dependency:mocha",
    "clean-dependencies": "run-p clean-dependency:*",
    "clean-dependency:customary": "npm run --prefix node_modules/customary clean"
  },
  "dependencies": {
    "@types/chai": "^4.3.19",
    "@types/mocha": "^10.0.8",
    "chai": "^5.1.1",
    "customary": "file:../customary",
    "highlight.js": "^11.10.0",
    "knockout": "^3.5.1",
    "mocha": "^10.7.3"
  },
  "devDependencies": {
    "@types/node": "^20.16.5",
    "copyfiles": "^2.4.1",
    "http-server": "^14.1.1",
    "npm-run-all": "^4.1.5",
    "replace-in-file": "^8.1.0",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.2"
  },
  "engines": {
    "node": "20.17.0"
  },
  "license": "Apache-2.0",
  "author": "Andre de Oliveira"
}
