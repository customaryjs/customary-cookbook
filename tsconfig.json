{
  "include": ["web/**/*"],
  "compilerOptions": {
    "rootDir": "web",
    "paths": {
      "#customary/*": ["./node_modules/customary/src/*"],
      "chai/*": ["./node_modules/chai/*"],
      "knockout/": ["./node_modules/knockout/build/types/knockout/"],
      "lit/": ["./node_modules/lit/development/"],
      "mocha/*": ["./node_modules/mocha/*"]
    },
    // https://lit.dev/docs/components/decorators/#decorators-typescript
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    // ---- CODING STANDARDS TYPICAL FOR ALL PROJECTS START HERE ----
    "allowJs": false,
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2022"
  }
}